<%= form_with(model: @message, url: {:controller => 'messages', :action => 'create'}, class: "form-inline") do |form| %>
  <div class="form-group">
    <%= form.text_field :text, id: "message-box", class: "form-control" %>
  </div>

  <div class="form-group">
    <button type="button" class="btn btn-info", onclick="postMessage(<%= current_user.id %>, <%=@room.id %>)">Post</button>
  </div>
<% end %>