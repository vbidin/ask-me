<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Open</th>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name + "|" %></td>
        <td><%= room.open %></td>
        <td><%= link_to 'Join', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
